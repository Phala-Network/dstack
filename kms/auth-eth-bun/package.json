{
  "name": "auth-eth-bun",
  "version": "1.0.0",
  "description": "dstack KMS ethereum backend with bun + hono + zod",
  "main": "index.ts",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "fmt": "oxlint --fix .",
    "check": "bun run lint && bun run test:run"
  },
  "dependencies": {
    "hono": "4.8.5",
    "@hono/zod-validator": "0.2.2",
    "zod": "3.25.76",
    "viem": "2.31.7"
  },
  "devDependencies": {
    "@types/bun": "1.2.18",
    "@types/node": "^24.0.14",
    "@vitest/ui": "1.6.1",
    "openapi-types": "12.1.3",
    "oxlint": "0.9.10",
    "typescript": "5.8.3",
    "vitest": "1.6.1"
  },
  "type": "module"
}